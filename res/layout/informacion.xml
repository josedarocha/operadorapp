<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.tactilapp.operadorapp.componente.ImagenDeAnchuraCompleta
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:adjustViewBounds="true"
        android:contentDescription="@string/imagen"
        android:onClick="irALaCMT"
        android:src="@drawable/cmt" />

    <com.tactilapp.operadorapp.componente.ImagenDeAnchuraCompleta
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:adjustViewBounds="true"
        android:contentDescription="@string/imagen"
        android:onClick="irAEnviarSugerencia"
        android:src="@drawable/tienes_dudas" />

    <com.tactilapp.operadorapp.componente.ImagenDeAnchuraCompleta
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:adjustViewBounds="true"
        android:contentDescription="@string/imagen"
        android:onClick="irATactilapp"
        android:src="@drawable/tactilapp" />

    <com.tactilapp.operadorapp.componente.ImagenDeAnchuraCompleta
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:adjustViewBounds="true"
        android:contentDescription="@string/imagen"
        android:onClick="volver"
        android:src="@drawable/volver" />

</LinearLayout>